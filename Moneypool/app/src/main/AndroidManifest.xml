<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.waoss.moneypool.client">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".notification.NotificationTestActivity" />

        <service
            android:name=".service.NotificationService"
            android:enabled="true" />

        <activity android:name=".login.LoginActivity">
        </activity>
        <activity android:name=".login.LendActivity" />
        <activity android:name=".login.BorrowActivity" />
        <activity android:name=".history.HistoryActivity" />
        <activity android:name=".SignupActivity" />
        <activity
            android:name=".login.OptionsActivity"
            android:label="@string/title_activity_options"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".history.ReceiversActivity" />
        <activity android:name=".history.SendersActivity" />
        <activity android:name=".InitialActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>